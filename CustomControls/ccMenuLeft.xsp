<?xml version="1.0" encoding="UTF-8"?>
<xp:view xmlns:xp="http://www.ibm.com/xsp/core"
	xmlns:xe="http://www.ibm.com/xsp/coreex">
	
	<xp:panel id="lotusMenu" styleClass="lotusMenu">
		<xp:panel id="lotusBottomCorner"
			styleClass="lotusBottomCorner">
			<xp:panel styleClass="lotusInner" id="lotusInner">
				<xp:tabbedPanel id="tabbedPanel1"
					selectedTab="#{javascript:viewScope.menuSelected}">


					<xp:tabPanel label="Profiles" id="viewProfile"
						selectedTabStyleClass="lotusSelected">
						<xp:eventHandler event="onclick" submit="true"
							refreshMode="partial" refreshId="lotusMain" onStart="showWait();"
							onComplete="hideWait();" onError="showError();">
							<xp:this.action><![CDATA[#{javascript:viewScope.menuSelected = "viewProfile";
getComponent("dync").show("profile");}]]></xp:this.action>
						</xp:eventHandler>
					</xp:tabPanel>
					
					<xp:tabPanel label="Roles" id="viewRoles"
						selectedTabStyleClass="lotusSelected">
						<xp:eventHandler event="onclick" submit="true"
							refreshMode="partial" refreshId="lotusMain" onStart="showWait();"
							onComplete="hideWait();" onError="showError();">
							<xp:this.action><![CDATA[#{javascript:viewScope.menuSelected = "viewRoles";
getComponent("dync").show("role");

}]]></xp:this.action>
						</xp:eventHandler>
					</xp:tabPanel>
					
					<xp:tabPanel label="Configuration"
						id="viewConfigure" selectedTabStyleClass="lotusSelected">
						<xp:eventHandler event="onclick" submit="true"
							refreshMode="partial" refreshId="lotusMain" onStart="showWait();"
							onComplete="hideWait();" onError="showError();">
							<xp:this.action><![CDATA[#{javascript:viewScope.menuSelected = "viewConfigure";
getComponent("dync").show("config");}]]></xp:this.action>
						</xp:eventHandler>
					</xp:tabPanel>
					<xp:tabPanel id="viewDefine"
						label="Schema Definition" selectedTabStyleClass="lotusSelected">
						<xp:eventHandler event="onclick" submit="true"
							refreshMode="partial" refreshId="lotusMain" onStart="showWait();"
							onComplete="hideWait();" onError="showError();">
							<xp:this.action><![CDATA[#{javascript:viewScope.menuSelected = "viewDefine";
getComponent("dync").show("define")}]]></xp:this.action>
						</xp:eventHandler>
					</xp:tabPanel>
					<xp:tabPanel id="viewAssoUser" label="Associate Users"
						selectedTabStyleClass="lotusSelected">
						<xp:eventHandler event="onclick" submit="true"
							refreshMode="partial" refreshId="lotusMain" onStart="showWait();"
							onComplete="hideWait();" onError="showError();">
							<xp:this.action><![CDATA[#{javascript:viewScope.menuSelected = "viewAssoUser";
getComponent("dync").show("associate")}]]></xp:this.action>
						</xp:eventHandler>
					</xp:tabPanel>

					<xp:tabPanel label="Organizational Settings"
						id="viewOrg" selectedTabStyleClass="lotusSelected"
						loaded="false">
						<xp:eventHandler event="onclick" submit="true"
							refreshMode="partial" refreshId="lotusMain" onStart="showWait();"
							onComplete="hideWait();" onError="showError();">
							<xp:this.action><![CDATA[#{javascript:viewScope.menuSelected = "viewOrg";
getComponent("dync").show("org")}]]></xp:this.action>
						</xp:eventHandler>
					</xp:tabPanel>
					<xp:tabPanel label="Data Sharing" id="viewDataSharing" selectedTabStyleClass="lotusSelected">
						<xp:eventHandler event="onclick" submit="true" refreshMode="partial" refreshId="lotusMain" onStart="showWait();" onComplete="hideWait();" onError="showError();">
							<xp:this.action><![CDATA[#{javascript:viewScope.menuSelected = "viewDataSharing";
getComponent("dync").show("datasharing")}]]></xp:this.action>
						</xp:eventHandler>
					</xp:tabPanel>
					</xp:tabbedPanel>
			</xp:panel>
		</xp:panel>
	</xp:panel>
	<xp:eventHandler event="onClientLoad" submit="true"
		refreshMode="norefresh">
	</xp:eventHandler></xp:view>
